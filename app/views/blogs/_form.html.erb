<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <ul class="alert alert-error">
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
    <%= f.label :body %><br />
    <%= f.text_area :body, rows: 20, class: 'input-block-level span12' %>
    <p>
      <%= f.check_box :status %> Draft?
    </p>
    <p>
      <%= f.submit class: 'btn btn-primary' %>
    </p>
  </fieldset>
<% end %>
