<% provide(:title, "Blogs") %>
<h1>Ramblings of a mad man</h1>

<div class="row-fluid">
  <% @blogs.each do |blog| %>
    <div class="span11 block">
      <h4 class="blog-title"><%= blog.title %></h4>
      <p class="blog-body"><%= blog.body_rendered.html_safe %></p>

      <% if user_signed_in? %>
        <p class="blog-actions">
          <%= link_to 'Edit', edit_blog_path(blog) %>
          <%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      <% end %>
    </div>
  <% end %>

  <div class="span6">
    <% if user_signed_in? %>
      <%= link_to 'New Blog', new_blog_path %>
    <% end %>
  </div>

</div>