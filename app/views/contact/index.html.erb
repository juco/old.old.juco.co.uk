<% provide(:title, "Contact") %>
<h1>Contact Me</h1>

<div class="row">
  <div class="span10">
    <% if @contact.errors.any? %>
      <div class="alert alert-error">
        <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>

          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(:contact, action: :create, html: { class: 'form-horizontal' }) do |f| %>
      <div class="controls block">
        <%= f.label(:name, "Name:") %>
        <%= f.text_field(:name, class: 'span7') %>

        <%= f.label(:email, "Email:") %>
        <%= f.text_field(:email, class: 'span7') %>

        <%= f.label(:message, "Message:") %>
        <%= f.text_area(:message, rows: 7, class: 'span7') %>

        <%= f.submit 'Send', class: 'form-btn btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>